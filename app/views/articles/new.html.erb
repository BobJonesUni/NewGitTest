<h1> Welcome to CyberPunk world. Submit your survey. </h1>

<% if @article.errors.any? %>
<ul>
	<% @article.errors.full_messages.each do |errorz| %>
	<li><%=errorz %></li>
	<% end %>
</ul>
<% end %>

<%=form_for @article do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit "Create an article" %>
	</p>

<% end %>


